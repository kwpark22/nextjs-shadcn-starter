{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(npm cache clean:*)",
      "Bash(npm install:*)",
      "Bash(npx shadcn@latest add:*)",
      "Bash(NPM_CONFIG_CACHE=/tmp/.npm npx shadcn@latest add:*)",
      "Bash(npm run build:*)",
      "Bash(git init:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git remote add:*)",
      "Bash(git push:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> .claude/bash-log.txt"
          }
        ]
      }
    ]
  }
}
